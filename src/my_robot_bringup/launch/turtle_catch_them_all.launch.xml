<launch>
  <!-- Turtlesim simulator -->
  <node pkg="turtlesim" exec="turtlesim_node" name="turtlesim" output="screen"/>

  <!-- Spawner node with params from YAML -->
  <node pkg="turtlesim_catch" exec="turtle_spawner" name="turtle_spawner" output="screen">
    <param from="$(find-pkg-share my_robot_bringup)/config/catch_them_all_config.yaml"/>
  </node>

  <!-- Controller node with params from YAML -->
  <node pkg="turtlesim_catch" exec="turtle_controller" name="turtle_controller" output="screen">
    <param from="$(find-pkg-share my_robot_bringup)/config/catch_them_all_config.yaml"/>
  </node>
</launch>
